<div class="card form-group">
  <div class="card-body">
    <div class="form-group row">
      <input type="hidden" name="question-id" value="<%= (typeof question !== 'undefined' && typeof question.id === 'string') ? question.id : '' ; %>">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Question Title</label>
      <div class="col-sm-10">
        <input class="form-control" id="inputEmail3" placeholder="Example: What do you think?" value="<%= (typeof question !== 'undefined' && typeof question.title === 'string') ? question.title : '' ; %>">
        <small class="form-text text-muted">Write a question that you want to ask your cohort.</small>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Question Type</label>
      <div class="col-sm-10">
        <select class="custom-select">
          <option value="text">Text</option>
          <option value="scale" disabled>Scale</option>
          <option value="choice" disabled>Choice</option>
        </select>
        <small class="form-text text-muted">Choose a question type.</small>
      </div>
    </div>
  </div>
</div>
